<div class="grid-container">
    {[...Array(12)].map(() => (
      <div class="grid-item"></div>
    ))}
  </div>
  
  <script>
    function startRandomRotation() {
      const tiles = document.querySelectorAll<HTMLElement>('.grid-item');
      const randomTile = tiles[Math.floor(Math.random() * tiles.length)];
      randomTile.classList.remove('rotate-animation');
      void randomTile.offsetWidth;
      randomTile.classList.add('rotate-animation');
      setTimeout(startRandomRotation, Math.random() * 5000 + 3000);
    }
    window.addEventListener('load', () => {
      setTimeout(startRandomRotation, 2000);
    });
  </script>
  
  <style>
    .grid-container {
      display: grid;
      grid-template-columns: repeat(4, 100px);
      grid-template-rows: repeat(3, 100px);
      gap: 40px;
      place-content: center;
      min-height: 90vh;
      width: 90vw;
      margin: 0 auto;
    }
    .grid-item {
      background-color: #7c7878;
      width: 100%;
      height: 100%;
      border-radius: 4px;
    }
    .grid-item:nth-child(2) {
      background-color: #00bfff;
    }
    .grid-item:nth-child(8) {
      background-color: #ff0000;
    }
    .rotate-animation {
      animation: rotate3D 1.5s ease-in-out;
    }
    @keyframes rotate3D {
      from { transform: rotate3d(1, -1, 0, 0deg); }
      to { transform: rotate3d(1, -1, 0, 360deg); }
    }
  </style>
  