---
import Common from "../../layouts/Common.astro";

import type { GetStaticPaths } from 'astro';
type Post = {
  Content: any;
  frontmatter: {
    slug: string;
    title: string;
  };
};
export const getStaticPaths: GetStaticPaths = async () => {
  // 記事ファイルを取得
  const posts = await Astro.glob<{
    frontmatter: {
      slug: string;
      title: string;
    };
  }>('/src/content/works/*.md');

  // 各記事のslugをparamsに設定
  return posts.map(post => ({
    params: { slug: post.frontmatter.slug },
    props: { post }
  }));
}

// propsから記事データを取得
const { post } = Astro.props as { post: Post };
const { Content } = post;
---

<Common title={post.frontmatter.title}>
  <article class="work-detail">
    <div class="content">
      <Content />
    </div>
  </article>
</Common>

<style>
  .work-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .main-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .description {
    color: #666;
    font-size: 1.1rem;
    margin: 1rem 0;
  }

  .content {
    margin-top: 2rem;
  }

  h1 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 1rem;
  }
</style>
